<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>

      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= button_to "Show", article, method: :get %></td>
        <td><%= button_to "Edit", edit_article_path(article), method: :get %></td>
        <td><%= button_to "Delete", article_path(article), method: :delete, data: { "turbo-confirm": "Are you sure?" } %></td>
      </tr>

  <% end %>

  </tbody>
</table>

<br>
<%= button_to "New article", new_article_path(@articles), method: :get  %>
<br>
<%= link_to "About", about_path() %>
