<h1>Showing article details</h1>
<p><strong>Title: </strong><%= @article.title %> </p>
<p><strong>Description: </strong><%= @article.description %></p>
<br>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tr>
    <td><%= button_to "Edit", edit_article_path(@article), method: :get %></td>
    <td><%= button_to "Delete", article_path(@article), method: :delete, data: { "turbo-confirm": "Are you sure?" } %></td>
    <td><%= button_to "Articles list", articles_path(@articles), method: :get %></td>
  </tr>
</table>
